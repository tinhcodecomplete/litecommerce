@model LiteCommerce.DomainModel.Category
@{ 
   
}

    <div class="box-header with-border">
        <h3 class="box-title">@ViewBag.message</h3>
        <a class="pull-right btn" onclick="goBack()">Back to list</a>

        <script>
            function goBack() {
                window.history.back();
            }
        </script>

    </div>
<form role="form" action="~/Category/Input" method="post">
    <div class="box box-primary">


        <div class="box-body">
            <input type="hidden" value="@Model.CategoryID" name="CategoryID" />
            <div class="form-group">
                <label>Category Name:</label>

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-building"></i>
                    </div>
                    <input type="text" class="form-control" value="@Model.CategoryName" name="CategoryName">
                </div>
            </div>


            <div class="form-group">


                <label>Descriptions:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-file-text"></i>
                    </div>
                    <input type="text" class="form-control" value="@Model.Description" name="Description">
                </div>



            </div>

            <div>
                <button type="submit" class="btn btn-primary "> <i class="fa fa-save"></i>Save</button>
                <a href="~/Category" type="button" class="btn btn-danger ">Cancel</a>
            </div>
        </div>



    </div>
</form>


