@model LiteCommerce.DomainModel.UserAccount
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h1 class="text-center " style="margin-bottom: 50px; margin-top: 50px;">Forgot password</h1>
        <h5 class="text-center text-danger" style="margin-bottom: 10px; margin-top: 50px;">@ViewBag.message</h5>
        <h5 class="text-center text-danger" style="margin-bottom: 10px; margin-top: 50px;">@Html.ValidationSummary()</h5>
       
        <form class="form-horizontal" action="~/Account/ForgotPwd" method="post" role="form">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" id="Email" placeholder="Enter email" name="UserID" required>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-outline-primary">Forgot my password</button>
                </div>
                <div class="col-sm-offset-2 col-sm-2">
                    <a type="button" href="~/Account/Login" style="color:red" class="btn btn-outline-danger">Back to Login</a>
                </div>
            </div>
        </form>
    </div>

</body>
</html>
